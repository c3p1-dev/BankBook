<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BankBook.Controls.SideBar">
	<Border Background="MidnightBlue" CornerRadius="10" Padding="5">
		<StackPanel Background="MidnightBlue" VerticalAlignment="Stretch">
			<TextBlock Text="Menu" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0 10 0 5"/>
			<Button Margin="0 5" Padding="5" HorizontalAlignment="Center" Width="90">
				<StackPanel>
					<Image Source="avares://BankBook/Pictures/Icons/dashboard.png" Height="40" Width="40" />
					<TextBlock HorizontalAlignment="Center" Margin="1">Dashboard</TextBlock>
				</StackPanel>
			</Button>
			<Button Margin="0 5" Padding="5" HorizontalAlignment="Center" Width="90">
				<StackPanel>
					<Image Source="avares://BankBook/Pictures/Icons/account.png" Height="40" Width="40" />
					<TextBlock HorizontalAlignment="Center" Margin="1">Accounts</TextBlock>
				</StackPanel>
			</Button>
			<Button Margin="0 5" Padding="5" HorizontalAlignment="Center" Width="90">
				<StackPanel>
					<Image Source="avares://BankBook/Pictures/Icons/class.png" Height="40" Width="40"/>
					<TextBlock HorizontalAlignment="Center" Margin="1">Classes</TextBlock>
				</StackPanel>
			</Button>
			<Button Margin="0 5" Padding="5" HorizontalAlignment="Center" Width="90">
				<StackPanel>
					<Image Source="avares://BankBook/Pictures/Icons/subclass.png" Height="40" Width="40" />
					<TextBlock HorizontalAlignment="Center" Margin="1">Subclasses</TextBlock>
				</StackPanel>
			</Button>
		</StackPanel>
	</Border>
</UserControl>
